<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="226dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/main_hospital_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M알림에서 다양한 서비스를 경험해보세요"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="20dp"
            android:textColor="@color/places_text_black_alpha_87"
            android:fontFamily="@font/notosanskr_bold"
          />

        <Button
            android:id="@+id/btn_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="290dp"
            android:background="@drawable/kakao_login_medium_wide"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_google"
            android:layout_width="310dp"
            android:layout_gravity="center"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"></com.google.android.gms.common.SignInButton>




    </LinearLayout>
</RelativeLayout>